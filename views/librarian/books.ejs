 <style>
    .books-table{
        display: flex;
        flex-direction: column;
        gap: 10px;
        justify-content: center;
        width: 70%;
        /* align-items: center; */
        height: 100vh;
        margin: 0 auto;
        
    }
    table{
        background-color:blanchedalmond;
        padding: 20px;
        border-radius: 15px;
        width:  100%;


    }
 </style>
<section class="books-table">
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Publication Date</th>
                <th>Copies Owned</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(function(book) { %>
                <tr>
                    <td>
                        <%= book.title %>
                    </td>
                    <td>
                        <%= book.category_name %>
                    </td> 
                    <td>
                        <%= book.publication_date.toISOString().slice(0, 10) %>
                    </td>
                    <td>
                        <%= book.copies_owned %>
                    </td>
                    <td>
                        <a href="/edit/<%= book.id %>">Edit</a>
                        <form action="/delete/<%= book.id %>" method="POST" style="display: inline;">
                            <button type="submit"
                                onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</section>